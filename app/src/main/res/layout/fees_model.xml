<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_design"
        android:elevation="10dp"
        android:paddingBottom="15dp"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#101E3D"
                android:textSize="16dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Type"/>

            <TextView
                android:id="@+id/feesmodel_feeTypeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#101E3D"
                android:textSize="16dp"
                android:gravity="end"
                android:layout_weight="1"
                android:paddingEnd="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Tution Fee"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#101E3D"
                android:textSize="16dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Fee Group"/>

            <TextView
                android:id="@+id/feesmodel_feeGroupTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#101E3D"
                android:textSize="16dp"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="A"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#101E3D"
                android:textSize="16dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Amount"/>

            <TextView
                android:id="@+id/feesmodel_amountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#101E3D"
                android:textSize="16dp"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="500.00"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#101E3D"
                android:textSize="16dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Due date"/>

            <TextView
                android:id="@+id/feesmodel_dueTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#101E3D"
                android:textSize="16dp"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="1970-01-01"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#101E3D"
                android:textSize="16dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Is Active"/>

            <TextView
                android:id="@+id/feesmodel_activeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#101E3D"
                android:textSize="16dp"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="No"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>